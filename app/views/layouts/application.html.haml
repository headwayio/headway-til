!!! 5
%html(lang="en-US")
  %head
    %title= [content_for(:page_title), SITE_NAME].compact.join(' - ').html_safe
    %link(href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900" rel="stylesheet")
    = stylesheet_link_tag    fingerprinted_asset('application'), media: 'all'
    = javascript_include_tag fingerprinted_asset('application')
    = csrf_meta_tags
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1")
    = favicon_link_tag 'favicon.png'
  %body.o-background.o-background--gradient
    .o-wrapper
      %h1.o-background.o-background--type= t('app.name_html')
      .o-wrapper--main.o-layout.o-layout--center.u-margin-top
        .o-layout__item.u-1x1
          %p.u-text-center= image_tag 'headway-logo-mark-white.svg', size: '50x50'
          %nav.nav-masthead
            .o-pack
              .o-pack__item= link_to('All', '#0')
              .o-pack__item= link_to('Development', '#0')
              .o-pack__item= link_to('Design', '#0')
              .o-pack__item= link_to(image_tag('twitter-logo.svg', size: '30x25'), '#0')
        .o-layout__item.u-1x1= yield
